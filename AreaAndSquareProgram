using System; 
class Area
{
	int Result;
	public void AreaRec()
	{
		int Length, Breadth;
		Console.WriteLine("Enter the Length of Rectangle");
		Length = Convert.ToInt32(Console.ReadLine());
		Console.WriteLine("Enter the Breadth of Rectangle");
		Breadth = Convert.ToInt32(Console.ReadLine());
		Result = Length * Breadth;
		Console.Clear();
		Console.WriteLine("The Area of the Rec is:{0}", Result);
	}

	public void AreaSqu()
	{
		int Side;
		Console.WriteLine("Enter the side of the Square");
		Side = Convert.ToInt32(Console.ReadLine());
		Result = Side * Side;
		Console.Clear();
		Console.WriteLine("The Area of the Square is:{0}", Result);
	}

	static void Main(String[] args)
	{
		Area obj = new Area();
		int Option;
		Console.WriteLine("Main Menu");
		Console.WriteLine("1.Area of Rectangle");
		Console.WriteLine("2.Area of Square");
		Console.WriteLine("Enter your choice(1,2)");
		Option = Convert.ToInt32(Console.ReadLine());

	switch (Option)
	{
		case 1:
			obj.AreaRec();
			break;

		case 2:
			obj.AreaSqu();
			break;

		default:
			Console.Clear();
			Console.WriteLine("Incorrect Choice");
			break;
		}
	}
}		